<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.PlaylistMaker.MainScreen"
    tools:context=".MainActivity">

    <TextView
        style="@style/ScreenTitle"
        android:text="@string/app_name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/padding_default"
        android:orientation="vertical">

        <Button
            android:id="@+id/search_button"
            style="@style/MainButton"
            android:text="@string/search"
            app:icon="@drawable/ic_search_24" />

        <Button
            android:id="@+id/library_button"
            style="@style/MainButton"
            android:text="@string/library"
            app:icon="@drawable/ic_library_24" />

        <Button
            android:id="@+id/settings_button"
            style="@style/MainButton"
            android:text="@string/settings"
            app:icon="@drawable/ic_settings_24" />
    </LinearLayout>
</LinearLayout>